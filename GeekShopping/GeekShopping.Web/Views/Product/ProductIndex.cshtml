@model IEnumerable<GeekShopping.Web.Models.ProductModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a class="btn btn-outline-primary" asp-action="ProductCreate">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    Category
                </td>
                <td>
                    Price
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="ProductEdit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="ProductDelete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>