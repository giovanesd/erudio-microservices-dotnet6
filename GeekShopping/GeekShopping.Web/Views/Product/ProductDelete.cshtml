@model GeekShopping.Web.Models.ProductModel

<form asp-action="ProductDelete">
    <br />
    <br />
    <div class="container border p-4">
        <h1 class="text-primary">Delete Product</h1>
        <input asp-for="Id" hidden />
        <hr />
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-2">
                <!--No Bootstrap a soma não pode ser superior a 12-->
                <label class="control-label pt-2" asp-for="Name" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Name" disabled/>
            </div>
        </div>
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="CategoryName" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="CategoryName" disabled/>
            </div>
        </div>
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Description" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" asp-for="Description" rows="5" disabled></textarea>
            </div>
        </div>
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Price" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Price" disabled/>
            </div>
        </div>
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-2">
                <label class="control-label pt-2" asp-for="ImageURL" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="ImageURL" disabled/>
            </div>
        </div>
        <div class="row">
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="ProductIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input class="btn btn-danger form-control" type="submit" value="Delete" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
